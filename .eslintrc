{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "jest": true,
        "es6": true,
        "node": true
    },
    "plugins": [
        "import"
    ],
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "import/newline-after-import": [
            "error",
            {
                "count": 2
            }
        ],
        "object-curly-newline": [
            "error",
            {
                "consistent": true
            }
        ],
        "lines-between-class-members": [
            "error",
            "always"
        ],
        "react/no-unused-prop-types": "error",
        "react/no-unused-state": "error",
        "no-trailing-spaces": "error",
        "eol-last": [
            "error",
            "always"
        ]
    }
}
